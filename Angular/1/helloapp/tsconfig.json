{
  "compileOnSave": false,
  // параметры компиляции
  "compilerOptions": { 
    "baseUrl": "./",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "ES2022",
    "moduleResolution": "node",
    "target": "ES2022",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "ES2022",
      "dom"
    ]
  },
    // компилируемые файлы
    "files": [ "src/main.ts" ],
    "include": [ "src/**/*.d.ts"]
}